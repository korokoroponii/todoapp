<div class="main groups-new">
  <div class="container">
    <div class="form-heading">新規グループ作成</div>
    <div class="form groups-form">
      <div class="form-body">
        <% @group.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        
        <%= form_for @group, :url => {:action => 'create'} do |f| %>
          <div class="form">
            <div class="form-body">
              <%= f.text_area :name %>
              <%= f.submit "送信" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>