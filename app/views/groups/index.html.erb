<div class="groups-index">
  <div class="container">
    <% if @current_user %>
      <h1 class="groups-heading">グループ一覧</h1>
      <% @groups.each do |group| %>
        <div class="groups-index-item">   
          <div class="group-right">
            <%= link_to(group.name, "/groups/#{group.id}") %>
          </div>
        </div>
      <% end %>
    
      
    <%end%>
     <div class="create-groups">
      <%= link_to("グループ作成", "/groups/new")%>    
     <div>
  </div>
</div>
