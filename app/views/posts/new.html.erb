<% if @admin %>
<div class="main posts-new">
  <div class="container">        
    <h1 class="form-heading">投稿する</h1>
    <%= form_for @post, :url => {:action => 'create'} do |f| %>
      <div class="form">
        <div class="form-body">
          
            <%= f.text_area :content %>
            
            <!-- <%= f.collection_select :user_id ,Group.find(params[:group_id]).users , :id, :name, :prompt => true , :multiple => true %> -->
            <%= f.select :user_id, Group.find(params[:group_id]).users.map{|o| [o.name, o.id]},{}, {:multiple => true }%>
            <%= f.submit "送信" %>
          
        </div>
      </div>
    <% end %>
  </div>
</div>

    <% @current_user.groups.each do |group| %>
      <p><%= group.id %></p>
      <p><%= group.name %></p>
    <% end %>
<% else %>
admin権限がありません。
<% end %>