<div class="main posts-index">
  <div class="container">
      <% if @posts %>
        <% @posts.each do |post| %>
          <div class="posts-index-item">
            <%= post.content %>
            <% if @admin %>
              <%= post.user.name %>へのタスク
              <% if post.task_done == true %>
                済
              <% else %>
                未
              <% end %>
            <% else %>
              <%= button_to("Complete", "post_hide/#{post[:id]}")%>
            <% end %>
          </div>
        <% end %>
      <% end %>
  </div>
</div>